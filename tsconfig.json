{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/providers/*": [
        "providers/*"
      ]
    }
  },
  "exclude": [
    ".yarn"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
